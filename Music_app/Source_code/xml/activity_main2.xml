<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F0000000">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/shuffle"
        android:scaleType="fitXY"
        android:layout_marginStart="230dp"
        android:layout_marginTop="405dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"/>
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/play"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"
        android:layout_marginTop="405dp"
        android:backgroundTint="@color/black"/>

</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Shuffle"
            android:layout_marginStart="32dp"
            android:layout_marginTop="410dp"
            android:backgroundTint="#3F51B5">
        </Button>

        <ImageView
            android:layout_width="220dp"
            android:layout_height="250dp"
            android:src="@drawable/strimg"
            android:scaleType="fitXY"
            android:layout_marginStart="95dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="STR Playlist"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="350dp"
            android:layout_marginStart="120dp"
            android:textSize="30sp"
            android:textColor="@color/white"/>
        <ImageButton
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/thappu"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"
            android:layout_marginTop="490dp"
            android:backgroundTint="@color/black"/>

        <ImageButton
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/vinnai"
            android:id="@+id/b2"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"
            android:layout_marginTop="570dp"
            android:backgroundTint="@color/black"/>

        <ImageButton
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/idhu"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"
            android:layout_marginTop="650dp"
            android:backgroundTint="@color/black"/>

        <ImageButton
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/pesa"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"
            android:layout_marginTop="737dp"
            android:backgroundTint="@color/black"/>



    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>